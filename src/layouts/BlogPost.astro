---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, subHeadline, description, pubDate, updatedDate, heroImage } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="body-gradient">
    <Header />
    <main
      class="w-full flex flex-col justify-center items-center py-[5%] px-[23%] gap-12"
    >
      <article>
        <div>
          <div class="w-full flex justify-center items-center playfair-display">
            <div class="w-full flex flex-col justify-center items-start gap-20">
              <div class="flex flex-col gap-3">
                <FormattedDate date={pubDate} />
                {
                  updatedDate && (
                    <div class="text-xl">
                      Last updated on <FormattedDate date={updatedDate} />
                    </div>
                  )
                }
              </div>
              <div class="flex flex-col gap-8">
                <h1 class="text-5xl">{title}</h1>
                <h2
                  class="cardo-regular-italic text-[1.55rem] text-white bg-gradient-to-br from-stone-900 to-stone-400 pt-2 pb-3 px-3 rounded-sm"
                >
                  {subHeadline}
                </h2>
              </div>
            </div>
            <!-- <div class="w-full flex justify-center items-center">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div> -->
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
